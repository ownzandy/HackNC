<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.parse.starter.receiveMsgActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/icon"
            android:background="@null"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:scaleType="fitCenter"
            android:id="@+id/back"
            android:clickable="true"
            android:enabled="true"
            android:onClick="backtoMap"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView android:text="Your Bubble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:id="@+id/origin"
                    android:layout_marginBottom="5dp" />

                <View android:id="@+id/separator"
                    android:background="@color/normal"
                    android:layout_width = "fill_parent"
                    android:layout_height="3dip"
                    android:layout_above="@+id/distance"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView android:text="Message and Picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/origin"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:id="@+id/distance"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/picture"

        android:layout_below="@+id/title" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hi from Chapel Hill!!! Working hard or hardly working? #hackNC #hackathons"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/message"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/dim_foreground_disabled_material_dark"
        android:backgroundTintMode="src_in"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="gravity" />

</RelativeLayout>
